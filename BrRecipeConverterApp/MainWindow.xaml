<Window x:Class="BrRecipeConverterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrRecipeConverterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="OpenXml" Click="OpenXml_OnClick">Open Recipe XML</Button>
        </StackPanel>

        <Border BorderThickness="1" BorderBrush="Black" Margin="10">
            <StackPanel>
                <Label FontWeight="Bold">Csv Results</Label>
                <TextBlock x:Name="Results" Padding="5">Open Xml File to See Results</TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
